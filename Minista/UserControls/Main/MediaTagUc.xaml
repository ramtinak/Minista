<UserControl
    x:Class="Minista.UserControls.Main.MediaTagUc"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Minista.UserControls.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid Background="{StaticResource DefaultItemBackgroundColor}" CornerRadius="5">
        <TextBlock
            x:Name="txtUsername"
            Margin="5"
            VerticalAlignment="Center"
            FontFamily="{StaticResource VazirFont}"
            FontSize="{StaticResource DefaultFontSize}"
            Foreground="{StaticResource DefaultInnerForegroundColor}"
            TextAlignment="Center" />
        <Border Background="AliceBlue" Opacity="0" />

    </Grid>
</UserControl>
