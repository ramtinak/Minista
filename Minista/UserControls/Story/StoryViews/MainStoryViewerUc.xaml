        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Height="52">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="BackButton"
                Background="{x:Null}"
                Click="BackButtonClick"
                Foreground="{StaticResource DefaultInnerForegroundColor}">
                <Button.Content>
                    <FontIcon Glyph="" />
                </Button.Content>
            </Button>
            <Button
                x:Name="MainTextBlock"
                Grid.Column="1"
                Margin="5"
                Background="{x:Null}"
                Click="MainTextBlockClick"
                Foreground="{StaticResource DefaultInnerForegroundColor}">
                <Button.Content>
                    <TextBlock VerticalAlignment="Center" Foreground="{StaticResource DefaultForegroundColor}">
                        <Run
                            FontFamily="{StaticResource MaterialSymbolFont}"
                            FontSize="{StaticResource DefaultFontSize}"
                            Text="" /> <Run
                            FontFamily="{StaticResource VazirFont}"
                            FontSize="{StaticResource DefaultFontSize}"
                            Text="{Binding ViewerCount}" />
                    </TextBlock>
                </Button.Content>
            </Button>

            <Button
                x:Name="SecondTextBlock"
                Grid.Column="1"
                Margin="5"
                Background="{x:Null}"
                Click="MainTextBlockClick"
                Foreground="{StaticResource DefaultInnerForegroundColor}"
                Visibility="Collapsed">
                <Button.Content>
                    <TextBlock
                        x:Name="SecondText2Block"
                        Grid.Column="1"
                        Margin="5"
                        FontFamily="{StaticResource VazirFont}"
                        FontSize="{StaticResource DefaultFontSize}"
                        Foreground="{StaticResource DefaultForegroundColor}" />
                </Button.Content>
            </Button>
            <Button
                x:Name="InsightsButton"
                Grid.Column="2"
                Margin="5"
                Background="{x:Null}"
                Click="InsightsButtonClick"
                Foreground="{StaticResource DefaultInnerForegroundColor}"
                Visibility="Collapsed">
                <Button.Content>
                    <TextBlock
                        Grid.Column="1"
                        Margin="5"
                        FontFamily="{StaticResource MaterialSymbolFont}"
                        FontSize="{StaticResource DefaultFontSize}"
                        Foreground="{StaticResource DefaultForegroundColor}"
                        Text="" />
                </Button.Content>
            </Button>

        </Grid>
        <Grid
            Grid.Row="1"
            Height="1"
            Background="#FF2E2E2E" />

        <Grid x:Name="Grid1" Grid.Row="2">
            <Grid x:Name="MainGrid">
                <ListView
                    x:Name="MainLV"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Foreground="{StaticResource DefaultInnerForegroundColor}"
                    IsItemClickEnabled="False"
                    ItemTemplateSelector="{StaticResource StoryViewerTemplateSelector}"
                    ItemsSource="{Binding Items, Mode=OneWay}"
                    SelectionMode="None">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="1" />
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

            </Grid>
            <Grid x:Name="QuestionRespondersGrid" Visibility="Collapsed">

                <localX:AdaptiveGridView
                    x:Name="QuestionRespondersGV"
                    Margin="5"
                    IsItemClickEnabled="True"
                    ItemContainerStyle="{StaticResource GridViewItemContainerStyle}"
                    ItemTemplate="{StaticResource QuestionsResponsesUserXTemplate}"
                    ItemsSource="{Binding ResponderVM.Items, Mode=OneWay}"
                    MinItemHeight="210"
                    MinItemWidth="215"
                    SelectionMode="None">
                    <GridView.ItemContainerTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition />
                        </TransitionCollection>
                    </GridView.ItemContainerTransitions>

                    <localX:AdaptiveGridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid HorizontalAlignment="Center" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </localX:AdaptiveGridView.ItemsPanel>
                </localX:AdaptiveGridView>
            </Grid>

            <Grid x:Name="PollVotersGrid" Visibility="Collapsed">
                <Pivot
                    x:Name="MainPivot"
                    Grid.Row="1"
                    Margin="0"
                    Padding="0">
                    <PivotItem
                        Margin="0"
                        Padding="0"
                        Header="{Binding PollVotersVM.YesText}">
                        <ListView
                            x:Name="LVYes"
                            Margin="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Foreground="{StaticResource DefaultInnerForegroundColor}"
                            IsItemClickEnabled="False"
                            ItemTemplate="{StaticResource PollVotersUserTemplate}"
                            ItemsSource="{Binding PollVotersVM.ItemsYes, Mode=OneWay}"
                            SelectionMode="None">

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Margin" Value="1" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </PivotItem>
                    <PivotItem
                        Margin="0"
                        Padding="0"
                        Header="{Binding PollVotersVM.NoText}">
                        <ListView
                            x:Name="LVNo"
                            Margin="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Foreground="{StaticResource DefaultInnerForegroundColor}"
                            IsItemClickEnabled="False"
                            ItemTemplate="{StaticResource PollVotersUserTemplate}"
                            ItemsSource="{Binding PollVotersVM.ItemsNo, Mode=OneWay}"
                            SelectionMode="None">

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Margin" Value="1" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </PivotItem>
                </Pivot>

            </Grid>
            <Grid x:Name="QuizAnswersGrid" Visibility="Collapsed">
                <ListView
                    x:Name="LVQuizAnswers"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Foreground="{StaticResource DefaultInnerForegroundColor}"
                    IsItemClickEnabled="False"
                    ItemTemplate="{StaticResource QuizAnswerUserTemplate}"
                    ItemsSource="{Binding QuizAnswersVM.Items, Mode=OneWay}"
                    SelectionMode="None">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="1" />
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

            </Grid>

            <Grid x:Name="SliderVoteGrid" Visibility="Collapsed">
                <ListView
                    x:Name="LVSliderVote"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Foreground="{StaticResource DefaultInnerForegroundColor}"
                    IsItemClickEnabled="False"
                    ItemTemplate="{StaticResource SliderAnswersUserTemplate}"
                    ItemsSource="{Binding SliderVotersVM.Items, Mode=OneWay}"
                    SelectionMode="None">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="1" />
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

            </Grid>
        </Grid>

        <uc:StoryInsightUc
            x:Name="StoryInsightUc"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Visibility="Collapsed" />
    </Grid>
</UserControl>
