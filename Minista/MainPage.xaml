                            Height="44"
                            Margin="5,2" />
                        <TextBlock
                            x:Name="UserNameText"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center" />
                    </Grid>
                    <Rectangle
                        Grid.Row="1"
                        Height=".5"
                        Margin="0,5"
                        Fill="#FF3A3A3A" />
